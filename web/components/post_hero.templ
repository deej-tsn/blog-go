package components

import "github.com/deej-tsn/blog-go/internal/models"

templ PostHero(postData models.Post) {
    <a class="postHero" href={templ.SafeURL("/posts/"+ postData.Slug)}>
            <h1>{postData.Title}</h1>
            <p>{postData.Description}</p>
            <p>{postData.Date.String()}</p>
    </a>

}